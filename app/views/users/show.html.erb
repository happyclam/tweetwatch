<%= javascript_tag do %>
$(document).ready(function(){
  $.ajax({url: '/tweets/check',
      dataType: "html",
      success: function(data) {
        if (data == "false") {
          $('#server_status').html("status = 停止中");
          $('#server_stop').hide();
          $('#server_start').show();
        } else {
          $('#server_status').html("status = 稼働中");
          $('#server_stop').show();
          $('#server_start').hide();
        }
      },
      error: function(data) {
        alert('Error Occured');
      }
  });
});
<% end %>

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <!-- <div id="message"> -->
    <!--   <%= flash.notice %> -->
    <!--   <%= flash.alert %> -->
    <!-- </div> -->
    <div id="server_status" style="margin: 30px 0px;">
    </div>
    <div id="server_start">
      <%= link_to("集計開始", tweets_start_path(:user => @user, :format => :js), :remote => true) %>
    </div>
    <div id="server_stop">
      <%= link_to("集計中止", tweets_stop_path(:user => @user, :format => :js), :remote => true) %>
    </div>
  </aside>
  <div class="col col-md-8">
    <% if @user.tracks.any? %>
      <h3>Tracks (<%= @user.tracks.count %>)</h3>
      <ol class="tracks">
        <%= render @tracks %>
      </ol>
      <%= will_paginate @tracks %>
    <% end %>
  </div>

</div>
